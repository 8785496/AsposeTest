@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gaussian blur</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==" crossorigin="anonymous" />
    <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/jquery-jgrowl/1.4.7/jquery.jgrowl.min.css" />
</head>
<body>
    <div class="header d-flex">
        <h2>Gaussian blur</h2>
        <div>
            <button id="open" class="btn btn-outline-warning">Open</button>
            <div class="title hidden">
                <span class="mr-2"></span>
                <input name="file" type="file" id="file" class="hidden" accept=".jpg, .jpeg, .png, .bmp, .tiff" />
                <button id="close" class="btn btn-sm btn-outline-light">&times;</button>
            </div>
        </div>
    </div>
    <div class="d-flex">
        <div class="tools">
            <div class="form-group">
                <label class="d-flex justify-content-between">
                    <span>Blur radius</span>
                    <span id="radius-label">0px</span>
                </label>
                <input type="range" id="radius" class="form-control" min="0" max="10" value="0" />
            </div>
            <div class="d-flex">
                <select class="form-control mr-1" id="fileType">
                    <option value="jpeg" selected>JPG</option>
                    <option value="png">PNG</option>
                    <option value="bmp">BMP</option>
                    <option value="tiff">TIFF</option>
                </select>
                <button id="download" class="btn btn-outline-warning">Download</button>
            </div>
        </div>
        <div class="preview">
            <div class="loader text-secondary hidden">
                <i class="fa fas fa-4x fa-spin fa-circle-notch"></i>
            </div>
            <div class="preview-container hidden">
                <img id="preview" alt="preview" />
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>
    <script src="~/js/main.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-jgrowl/1.4.7/jquery.jgrowl.min.js"></script>
</body>
</html>
